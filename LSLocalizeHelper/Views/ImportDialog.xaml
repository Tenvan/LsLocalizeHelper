<Window x:Class="LSLocalizeHelper.Views.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rules="clr-namespace:LSLocalizeHelper.Rules"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ImportDialog"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        FontFamily="{wpf:MaterialDesignFont}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        TextElement.FontSize="14"
        TextElement.FontWeight="Medium"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        UseLayoutRounding="False"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
  <Grid Margin="16">

    <Grid.RowDefinitions>
      <RowDefinition Height="50" />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Text="Neues Mod importieren"
               FontSize="20" />

    <StackPanel Grid.Row="1" Orientation="Horizontal">

      <TextBox x:Name="TextBoxPakFile"
               Width="600"
               wpf:HintAssist.Hint="Pfad zur PAK Datei"
               FontSize="16"
               Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
      <Button Margin="5,0,0,0"
              Click="ButtonBrowseFolder_OnClick"
              HorizontalAlignment="Right"
              Content="..." />

    </StackPanel>

    <TextBox x:Name="TextBoxModName"
             Grid.Row="2"
             wpf:HintAssist.Hint="Neuer Mod Name"
             FontSize="18"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
      <TextBox.Text>
        <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
          <Binding.ValidationRules>
            <rules:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
          </Binding.ValidationRules>
        </Binding>
      </TextBox.Text>
    </TextBox>

    <StackPanel Grid.Row="3"
                Margin="0,16,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
      <Button Click="ButtonImport_OnClick"
              Content="Importieren"
              IsDefault="True"
              Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}">
        <Button.CommandParameter>
          <system:Boolean>True</system:Boolean>
        </Button.CommandParameter>
      </Button>
      <Button Margin="8,0,0,0"
              Click="ButtonAbort_OnClick"
              Content="Abbruch"
              IsCancel="True"
              Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}">
        <Button.CommandParameter>
          <system:Boolean>False</system:Boolean>
        </Button.CommandParameter>
      </Button>
    </StackPanel>
  </Grid>
</Window>
