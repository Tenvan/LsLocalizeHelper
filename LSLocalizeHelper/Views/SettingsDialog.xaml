<Window x:Name="WindowSettings" x:Class="LSLocalizeHelper.Views.Settings.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MinHeight="100"
        Title="Settings"
        Height="100"
        Width="557"
        SizeToContent="Height" WindowStartupLocation="CenterOwner">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="150" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Label x:Name="LblSettingsModsFolder" Grid.Row="0" Grid.Column="0"
           Content="{DynamicResource LblSettingsModsFolder}" HorizontalAlignment="Center" Margin="0,10,0,0"
           VerticalAlignment="Top" Width="144" Height="26" HorizontalContentAlignment="Right" />
    <TextBox x:Name="TextBoxModsPath" Grid.Row="0" Grid.Column="1" Height="26" Margin="10,10,45,0" TextWrapping="Wrap"
             VerticalAlignment="Top" />
    <Button x:Name="ButtonBrowseFolder" Grid.Row="0" Grid.Column="1" Content="..." Margin="0,10,5,0"
            VerticalAlignment="Top" Height="26"
            HorizontalAlignment="Right" Width="32" Click="ButtonBrowseFolder_Click" />

    <Button x:Name="ButtonCancel" Grid.Row="1" Grid.Column="1" Content="Abbruch" Margin="0,10,5,0"
            Click="ButtonCancel_Click" Height="25"
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" />
    <Button x:Name="ButtonApply" Grid.Row="1" Grid.Column="1" Content="{DynamicResource ButtonApply}" Margin="0,0,88,0"
            Click="ButtonApply_Click" Height="25" VerticalAlignment="Bottom"
            HorizontalAlignment="Right" Width="100" />

  </Grid>
</Window>
